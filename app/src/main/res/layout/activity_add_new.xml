<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/twelveth"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:textAlignment="center">

    <Button
        android:id="@+id/add_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:text="Add"
        android:textAllCaps="false" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:weightSum="1"
        android:id="@+id/linearLayout">

        <EditText
            android:id="@+id/aid"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="0dp"
            android:background="#ead6b1"
            android:ems="10"
            android:hint="Author ID"
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/paddress"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/pemail"
            android:layout_below="@+id/pemail"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#ead6b1"
            android:ems="10"
            android:hint="Publisher address"
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/pemail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/pid"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#ead6b1"
            android:ems="10"
            android:hint="Publisher email"
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/pid"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/cid"
            android:layout_below="@+id/cid"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#ead6b1"
            android:ems="10"
            android:hint="Publisher ID"
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/cid"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/aid"
            android:layout_below="@+id/aid"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.27"
            android:background="#ead6b1"
            android:ems="10"
            android:hint="Category ID"
            android:inputType="textPersonName"
            android:textAlignment="center" />
    </LinearLayout>


</RelativeLayout>