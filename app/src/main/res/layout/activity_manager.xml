<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/third"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/add_member"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="0dp"
            android:text="Add new member"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/show_members"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/add_member"
            android:layout_below="@+id/add_member"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="0dp"
            android:text="Show all members"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/add_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/show_members"
            android:layout_below="@+id/show_members"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="0dp"
            android:text="Add new book"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/delete_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/add_book"
            android:layout_below="@+id/add_book"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:text="Delete member"
            android:textAllCaps="false" />
    </LinearLayout>

    <Button
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@android:drawable/ic_media_rew" />

</RelativeLayout>