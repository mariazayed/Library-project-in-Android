<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/eleventh">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:id="@+id/image"
        android:src="@drawable/profile"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/profile"
        android:background="@drawable/profile" />

    <Button
        android:id="@+id/select_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Image"
        android:textAllCaps="false"
        android:layout_below="@+id/image"
        android:layout_alignEnd="@+id/image"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/select_image"
        android:layout_below="@+id/select_image"
        android:layout_marginTop="10dp"
        android:text="Add Member"
        android:textAllCaps="false" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <EditText
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/name"
            android:hint="User Name"
            android:textAlignment="center"
            android:background="#a28980"
            android:layout_above="@+id/select_image"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp" />

        <EditText
            android:textSize="16dp"
            android:textAlignment="center"
            android:id="@+id/id"
            android:hint="User ID"
            android:textColor="@android:color/background_dark"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:background="#a28980"
            android:layout_alignBottom="@+id/select_image"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp" />

        <EditText
            android:textSize="16dp"
            android:textAlignment="center"
            android:id="@+id/email"
            android:hint="Email"
            android:textColor="@android:color/background_dark"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:background="#a28980"
            android:layout_width="match_parent"
            android:layout_above="@+id/address"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp" />

        <EditText
            android:textSize="16dp"
            android:textAlignment="center"
            android:id="@+id/password"
            android:hint="Password"
            android:textColor="@android:color/background_dark"
            android:inputType="textVisiblePassword"
            android:layout_height="40dp"
            android:background="#a28980"
            android:layout_width="match_parent"
            android:layout_above="@+id/email"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp" />

        <EditText
            android:textSize="16dp"
            android:textAlignment="center"
            android:id="@+id/address"
            android:hint="Address"
            android:textColor="@android:color/background_dark"
            android:layout_height="40dp"
            android:background="#a28980"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/dob"
            android:layout_alignParentEnd="true" />

        <EditText
            android:textSize="16dp"
            android:textAlignment="center"
            android:id="@+id/gender"
            android:hint="Gender"
            android:textColor="@android:color/background_dark"
            android:layout_height="40dp"
            android:background="#a28980"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/start_date"
            android:layout_alignStart="@+id/dob"
            android:layout_width="match_parent" />

        <EditText
            android:textSize="16dp"
            android:textAlignment="center"
            android:id="@+id/dob"
            android:hint="Date Of Birth"
            android:textColor="@android:color/background_dark"
            android:layout_height="40dp"
            android:background="#a28980"
            android:layout_width="match_parent"
            android:layout_above="@+id/gender"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp" />

        <EditText
            android:layout_height="40dp"
            android:textSize="16dp"
            android:textAlignment="center"
            android:id="@+id/start_date"
            android:hint="Start Participation Date"
            android:textColor="@android:color/background_dark"
            android:background="#a28980"
            android:layout_width="match_parent"
            android:layout_above="@+id/e_date"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp" />

        <EditText
            android:layout_height="40dp"
            android:textSize="16dp"
            android:textAlignment="center"
            android:id="@+id/e_date"
            android:hint="End Participation Date"
            android:textColor="@android:color/background_dark"
            android:background="#a28980"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="0dp" />
    </LinearLayout>

    <Button
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@android:drawable/ic_media_rew" />

</RelativeLayout>